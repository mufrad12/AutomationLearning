{
    "compilerOptions": {
        "target": "ES6",
        "module": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "baseUrl": "./",
        "paths": {
            "*": ["*"],
            "src/*": ["src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "src/**/*.ts",
        "tests/**/*.ts",
        "eslint.config.mjs",
        "trace-playwright-deps.ts",
        "playwright.config.ts"
    ]
}